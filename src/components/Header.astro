---
import { getCollection } from "astro:content";
import HeaderIntersection from "@/components/HeaderIntersection";

const socialsCollection = await getCollection("socials");
const socials = socialsCollection.map((item) => item.data);

const navigationCollection = await getCollection("navigation");
const navigation = navigationCollection.map((item) => item.data);

const { page } = Astro.props;
---

<HeaderIntersection
  client:load
  page={page}
  socials={socials}
  navigation={navigation}
/>
